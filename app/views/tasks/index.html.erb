<div class="row">
  <div class="col-md.4">
    <h2 class="h6 text-center"> Not yet started </h2>
    <ul class="list-group">
      <% current_user.tasks.not_yet_started.each do |task| %>
        <li class="list-group-item">
          <%= task.content %>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
        </li>
      <% end %>
    </ul>
  
    <h2 class="h6 text-center"> In progress </h2>
    <ul class="list-group">
      <% current_user.tasks.in_progress.each do |task| %>
        <li class="list-group-item">
          <%= task.content %>
        </li>
      <% end %>
    </ul>

    <h2 class="h6 text-center"> Complete </h2>
    <ul class="list-group">
      <% current_user.tasks.completed.each do |task| %>
        <li class="list-group-item">
          <%= task.content %>
        </li>
      <% end %>
    </ul>

  </div>
</div>


<br>

<%= link_to 'New Task', new_task_path %>
