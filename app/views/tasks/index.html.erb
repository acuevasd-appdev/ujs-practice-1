<div class="row">
  <div class="col-md.4">
    <h2 class="h6 text-center"> Not yet started </h2>
    <ul class="list-group">
      <% current_user.tasks.not_yet_started.each do |task| %>
        <li class="list-group-item">
          <%= task.content %>
          <div class ="row">
            <div class="col-md-4">
              Mover
            </div>
            <div class="col-md-4">
              <%= link_to edit_task_path(task), class: "btn btn-outline-secondary" do %>
                <i class="fa-regular fa-pen-to-square"></i>
              <% end %>
            </div>
            <div class="col-md-4">
              <%= link_to task, method: :delete, class: "btn btn-outline-secondary" do %>
              <i class="fa-regular fa-trash-can"></i>
              <% end %>
            </div>
          </div>
          
        </li>
      <% end %>
    </ul>
  
    <h2 class="h6 text-center"> In progress </h2>
    <ul class="list-group">
      <% current_user.tasks.in_progress.each do |a_task| %>
        <li class="list-group-item">
          <#%= render partial: "tasks/taskview", locals: { task: :a_task }  %>
        </li>
      <% end %>
    </ul>

    <h2 class="h6 text-center"> Complete </h2>
    <ul class="list-group">
      <% current_user.tasks.completed.each do |task| %>
        <li class="list-group-item">
          <%= task.content %>
        </li>
      <% end %>
    </ul>

  </div>
</div>


<br>

<%= link_to 'New Task', new_task_path %>
