<li class="list-group-item">
  <div class="row-mb-1">
    <%= task.content %>
  </div>
  
  <div class ="row">
    <div class="col-md-4">
      <div class="d-grid gap-2">
        mover
      </div>
    </div>
    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to edit_task_path(task), class: "btn btn-outline-secondary" do %>
        <i class="fa-regular fa-pen-to-square"></i>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to task, method: :delete, class: "btn btn-outline-secondary",
        remote: true do %>
        <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </div>
    </div>
  </div>
  
</li>
